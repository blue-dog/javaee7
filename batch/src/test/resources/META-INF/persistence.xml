<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="inverterPU">
        <mapping-file>META-INF/inverter-orm.xml</mapping-file>
        <properties>
            <!-- For connecting from Java Batch -->
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:target/INVERTERDB;create=true"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.password" value="SECRET"/>
            <property name="javax.persistence.jdbc.user" value="APP"/>
            <!-- For Schema generation. -->
                        <property name="javax.persistence.schema-generation-action" value="drop-and-create" />
                        <property name="javax.persistence.schema-generation-target" value="scripts" />
                        <property name="javax.persistence.ddl-create-script-target" value="create-inverter.sql"/>
                        <property name="javax.persistence.ddl-drop-script-target" value="drop-inverter.sql"/>

                        <property name="eclipselink.deploy-on-startup" value="true"/>
                        <property name="eclipselink.application-location" value="/tmp"/>

                        <property name="eclipselink.logging.level" value="INFO"/>
                    </properties>
                </persistence-unit>
            </persistence>